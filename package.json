{
  "name": "font2svg-linguist",
  "repository" : { "type" : "git", "url" : "https://github.com/hugolpz/font2svg-linguist.git"},
  "bugs": { "url" : "https://github.com/hugolpz/font2svg-linguist/issues"},
  "description": "Print visual representations of texts into svg, optionaly with annotations",
  "keywords": ["font", "unihan", "languages"],
  "main": "index.js",
  "author": [ "Hugo Lopez" ],
  "license": "Apache-2.0",
  "man": {
    "name" : "font2svg-linguist",
    "version" : "0.0.1",
    "description" : "A module to print svg from fonts, optionaly enriched by additional by annotations",
    "main" : "index.js",
    "man" : "./man/doc.1"
  },
  "scripts": {
    "start": "node --require babel-core/register ./index.js",
    "test": "ava test ; xo"
  },
  "dependencies": {
    "text-to-svg": "^3.0.1",
    "webfont": "^7.0.0",
    "cjk-unihan": "0.0.1-a",
    "unihan":"0.0.2"
  },
  "devDependencies": {
    "ava": "^0.18.0",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-2": "^6.13.0",
    "babel-runtime": "^6.11.6",
    "jsdom": "^9.5.0",
    "webpack": "^1.13.2",
    "xo": "^0.17.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "comments": false
  },
  "xo": {
    "esnext": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "svg-font-create/*",
      "resources/*"
    ]
  }
}
